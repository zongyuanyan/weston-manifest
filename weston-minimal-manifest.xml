<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Weston最小化构建manifest - 仅包含核心依赖 -->
  
  <default revision="main"
           remote="freedesktop"
           sync-j="4" />

  <remote name="freedesktop"
          fetch="https://gitlab.freedesktop.org" />
  
  <remote name="github"
          fetch="https://github.com" />

  <remote name="gnome"
          fetch="https://gitlab.gnome.org" />

  <!-- Wayland核心 -->
  <project path="wayland/wayland"
           name="wayland/wayland"
           remote="freedesktop"
           revision="main" />

  <project path="wayland/wayland-protocols"
           name="wayland/wayland-protocols"
           remote="freedesktop"
           revision="main" />

  <!-- Weston -->
  <project path="wayland/weston"
           name="wayland/weston"
           remote="freedesktop"
           revision="main" />

  <!-- 基础图形库 -->
  <project path="mesa/drm"
           name="mesa/drm"
           remote="freedesktop"
           revision="main" />

  <project path="mesa/mesa"
           name="mesa/mesa"
           remote="freedesktop"
           revision="main" />

  <!-- 输入支持 -->
  <project path="xorg/lib/libxkbcommon"
           name="xkeyboard-config/libxkbcommon"
           remote="freedesktop"
           revision="master" />

  <project path="xorg/lib/libinput"
           name="libinput/libinput"
           remote="freedesktop"
           revision="main" />

  <project path="xorg/lib/libevdev"
           name="libevdev/libevdev"
           remote="freedesktop"
           revision="master" />

  <!-- Cairo渲染 -->
  <project path="cairo/cairo"
           name="cairo/cairo"
           remote="freedesktop"
           revision="master" />

  <project path="cairo/pixman"
           name="pixman/pixman"
           remote="freedesktop"
           revision="master" />

  <!-- 字体支持 -->
  <project path="fontconfig/fontconfig"
           name="fontconfig/fontconfig"
           remote="freedesktop"
           revision="main" />

  <project path="freetype/freetype"
           name="freetype/freetype.git"
           remote="github"
           revision="master" />

  <project path="harfbuzz/harfbuzz"
           name="harfbuzz/harfbuzz"
           remote="github"
           revision="main" />

  <!-- 基础库 -->
  <project path="glib/glib"
           name="GNOME/glib"
           remote="gnome"
           revision="main" />

  <!-- 图像处理 -->
  <project path="libjpeg/libjpeg-turbo"
           name="libjpeg-turbo/libjpeg-turbo"
           remote="github"
           revision="main" />

  <project path="libpng/libpng"
           name="glennrp/libpng"
           remote="github"
           revision="libpng16" />

  <project path="libwebp/libwebp"
           name="webmproject/libwebp"
           remote="github"
           revision="main" />

  <!-- JSON支持 -->
  <project path="json/json-c"
           name="json-c/json-c"
           remote="github"
           revision="master" />

  <!-- 构建工具 -->
  <project path="meson/meson"
           name="mesonbuild/meson"
           remote="github"
           revision="master" />

  <project path="pkg-config/pkg-config"
           name="pkgconf/pkgconf"
           remote="github"
           revision="master" />

</manifest>