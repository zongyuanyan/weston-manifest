<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- 默认远程仓库配置 -->
  <default revision="main"
           remote="freedesktop"
           sync-j="4" />

  <!-- 远程仓库定义 -->
  <remote name="freedesktop"
          fetch="https://gitlab.freedesktop.org" />
  
  <remote name="github"
          fetch="https://github.com" />
  
  <remote name="kernel"
          fetch="https://git.kernel.org/pub/scm" />

  <remote name="gnome"
          fetch="https://gitlab.gnome.org" />

  <!-- Wayland核心协议 -->
  <project path="wayland/wayland"
           name="wayland/wayland"
           remote="freedesktop"
           revision="main" />

  <project path="wayland/wayland-protocols"
           name="wayland/wayland-protocols"
           remote="freedesktop"
           revision="main" />

  <!-- Weston核心 -->
  <project path="wayland/weston"
           name="wayland/weston"
           remote="freedesktop"
           revision="main" />

  <!-- Mesa 3D图形库 -->
  <project path="mesa/mesa"
           name="mesa/mesa"
           remote="freedesktop"
           revision="main" />

  <project path="mesa/drm"
           name="mesa/drm"
           remote="freedesktop"
           revision="main" />

  <!-- 图形驱动相关 -->
  <project path="xorg/lib/libxkbcommon"
           name="xkbcommon/libxkbcommon"
           remote="github"
           revision="master" />

  <project path="xorg/lib/libinput"
           name="libinput/libinput"
           remote="freedesktop"
           revision="main" />

  <project path="xorg/lib/libevdev"
           name="libevdev/libevdev"
           remote="freedesktop"
           revision="master" />

  <!-- Cairo图形库 -->
  <project path="cairo/cairo"
           name="cairo/cairo"
           remote="freedesktop"
           revision="master" />

  <project path="cairo/pixman"
           name="pixman/pixman"
           remote="freedesktop"
           revision="master" />

  <!-- 字体相关 -->
  <project path="fontconfig/fontconfig"
           name="fontconfig/fontconfig"
           remote="freedesktop"
           revision="main" />

  <project path="freetype/freetype"
           name="freetype/freetype"
           remote="github"
           revision="master" />

  <project path="harfbuzz/harfbuzz"
           name="harfbuzz/harfbuzz"
           remote="github"
           revision="main" />

  <!-- GStreamer多媒体框架 -->
  <project path="gstreamer/gstreamer"
           name="gstreamer/gstreamer"
           remote="freedesktop"
           revision="1.24" />

  <!-- PulseAudio音频系统 -->
  <project path="pulseaudio/pulseaudio"
           name="pulseaudio/pulseaudio"
           remote="freedesktop"
           revision="master" />

  <project path="pulseaudio/libsndfile"
           name="libsndfile/libsndfile"
           remote="github"
           revision="master" />

  <!-- 系统集成相关 -->
  <project path="systemd/systemd"
           name="systemd/systemd"
           remote="github"
           revision="main" />

  <project path="dbus/dbus"
           name="dbus/dbus"
           remote="github"
           revision="master" />

  <!-- 构建系统 -->
  <project path="meson/meson"
           name="mesonbuild/meson"
           remote="github"
           revision="master" />

  <project path="ninja/ninja"
           name="ninja-build/ninja"
           remote="github"
           revision="master" />

  <!-- 开发工具 -->
  <project path="pkg-config/pkgconf"
           name="pkgconf/pkgconf"
           remote="github"
           revision="master" />

  <!-- GNOME相关库 -->
  <project path="glib/glib"
           name="GNOME/glib"
           remote="gnome"
           revision="main" />

  <project path="glib/gobject-introspection"
           name="GNOME/gobject-introspection"
           remote="gnome"
           revision="main" />

  <project path="pango/pango"
           name="GNOME/pango"
           remote="gnome"
           revision="main" />

  <!-- JSON处理库 -->
  <project path="json/json-c"
           name="json-c/json-c"
           remote="github"
           revision="master" />

  <!-- 图像处理库 -->
  <project path="libjpeg/libjpeg-turbo"
           name="libjpeg-turbo/libjpeg-turbo"
           remote="github"
           revision="main" />

  <project path="libpng/libpng"
           name="pnggroup/libpng"
           remote="github"
           revision="libpng16" />

  <project path="libwebp/libwebp"
           name="webmproject/libwebp"
           remote="github"
           revision="main" />

  <!-- XML处理库 -->
  <project path="libxml2/libxml2"
           name="GNOME/libxml2"
           remote="gnome"
           revision="master" />

  <project path="libxslt/libxslt"
           name="GNOME/libxslt"
           remote="gnome"
           revision="master" />

  <!-- 网络库 -->
  <project path="curl/curl"
           name="curl/curl"
           remote="github"
           revision="master" />

  <!-- 压缩库 -->
  <project path="zlib/zlib"
           name="madler/zlib"
           remote="github"
           revision="develop" />

  <!-- 加密库 -->
  <project path="openssl/openssl"
           name="openssl/openssl"
           remote="github"
           revision="master" />

  <!-- 调试工具 -->
  <project path="valgrind/valgrind"
           name="mmuman/valgrind"
           remote="github"
           revision="master" />

  <!-- 文档生成 -->
  <project path="doxygen/doxygen"
           name="doxygen/doxygen"
           remote="github"
           revision="master" />

  <!-- 单元测试框架 -->
  <project path="check/check"
           name="libcheck/check"
           remote="github"
           revision="master" />

  <!-- Wayland相关扩展协议 -->
  <project path="wayland/wayland-utils"
           name="wayland/wayland-utils"
           remote="freedesktop"
           revision="main" />

  <!-- FFmpeg多媒体库 -->
  <project path="ffmpeg/ffmpeg"
           name="FFmpeg/FFmpeg"
           remote="github"
           revision="master" />

  <!-- OpenGL相关 -->
  <project path="khronos/opengl-registry"
           name="KhronosGroup/OpenGL-Registry"
           remote="github"
           revision="main" />

  <project path="khronos/egl-registry"
           name="KhronosGroup/EGL-Registry"
           remote="github"
           revision="main" />

</manifest>